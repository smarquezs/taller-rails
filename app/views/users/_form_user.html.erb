<h2>Registar usuario</3>

<% @usuario.inspect%>

<%= form_for @usuario do |f| -%>
  <% if @usuario.errors.any? %>
    <div class="error_explanation">
      <ul>
        <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg%> </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :user, "Usuario" %>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label :password, "Password" %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, "Confirmar password" %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Crear usuario", class: "btn btn-success" %>
  </p>
<% end %>