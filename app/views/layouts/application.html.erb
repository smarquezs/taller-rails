<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
  <div class="navbar-inner">
    <ul class="nav">
      <li><%= link_to "Home", root_url %></li>
      <% if current_user %>
        <li><%= link_to "Agregar post", new_post_path %></li>
        <li><%= link_to "Sign out", sign_out_path %></li>
        <li class="pull-right"><a href="#">Bienvenido: <%=current_user.email %></a></li>
      <% else %>
        <li><%= link_to "Sign in", sign_in_path %></li>
      <% end %>

    </ul>
  </div>
</div>

<div class="container">
  <% flash.each do |key, msg| %>
    <%= content_tag(:div, msg, class: "alert alert-#{key}")%>
  <% end %>
  <%= yield %>
</div>
<%= debug(params)%>

</body>
</html>
